<!-- BEGIN LOGO -->
<div class="logo">
    <a href="/admin">
        <img src="/img/admin/logo.png" alt="logo" class="logo-default">
    </a>
</div>
<!-- END LOGO -->

<!-- BEGIN LOGIN -->
<div class="content">
    <!-- BEGIN LOGIN FORM -->
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'login-form'}) do |f| %>
    	<h3 class="form-title">登录</h3>
        <% if notice || alert %>
            <div class="form-group">
              <% unless notice.nil? %>
                  <div class="alert alert-warning alert-dismissable">
                    <a href="#" class="close" data-dismiss="alert">&times;</a>
                    <span><%= notice %></span>
                  </div>
              <% end %>

              <% unless alert.nil? %>
                  <div class="alert alert-danger alert-dismissable">
                    <a href="#" class="close" data-dismiss="alert">&times;</a>
                    <span><%= alert %></span>
                  </div>
              <% end %>
            </div>
        <% end %>
        <div class="form-group">
            <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
            <%= f.label(:email, '邮箱', :class => "control-label visible-ie8 visible-ie9") %>
            <%= f.text_field(:email, :placeholder => '邮箱', :class => "form-control form-control-solid placeholder-no-fix", :autocomplete => "off") %>
        </div>
        <div class="form-group">
        	<%= f.label(:password, '密码', :class => "control-label visible-ie8 visible-ie9") %>
            <%= f.password_field(:password, :placeholder => '密码', :class => "form-control form-control-solid placeholder-no-fix", :autocomplete => "off") %>
        </div>
        <div class="form-actions">
            <% if devise_mapping.rememberable? -%>
            	<label class="rememberme check"><%= f.check_box :remember_me %>记住密码 </label>
			<% end %>
			<button type="submit" class="btn blue pull-right">登陆 <i class="m-icon-swapright m-icon-white"></i></button>
        </div>
		<div class="create-account">
			<!-- <p>还没有注册？<a href="/users/sign_up" id="register-btn">注册</a></p> -->
		</div>
    <% end %>
    <!-- END LOGIN FORM -->
</div>
<!-- END LOGIN -->

