<!-- BEGIN PAGE CONTENT -->
<div class="page-content">
    <div class="container">
        <%= render :partial => 'components/admin/page-breadcrumb/index' %>

        <!-- BEGIN PAGE CONTENT INNER -->
        <div class="row">
            <div class="col-md-12">
                <!-- Begin: life time stats -->

                <div class="portlet light">
                  <div class="portlet-title">
                    <div class="caption">
                      <i class="fa fa-cogs font-green-sharp"></i>
                      <span class="caption-subject font-green-sharp bold uppercase">修改密码</span>
                    </div>
                  </div>
                  <div class="portlet-body form">
                  <%= form_for(@user, :url => change_password_admin_user_path(@user), :html => {:class => 'form-horizontal clearfix user-form-validate', :role => 'form'}) do |f| %>
                    <div class="form-body">
                      <div class="form-group">
                        <%= f.label(:password, :class => "control-label col-md-3") do %>
                        新密码<span class="required">*</span>
                        <% end %>
                        <div class="col-md-4">
                          <%= f.text_field(:password, :type => 'password', :class => 'form-control') %>
                        </div>
                      </div>

                      <div class="form-group">
                        <%= f.label(:password_confirmation, :class => "control-label col-md-3") do %>
                        确认密码<span class="required">*</span>
                        <% end %>
                        <div class="col-md-4">
                          <%= f.text_field(:password_confirmation, :type => 'password', :class => 'form-control') %>
                        </div>
                      </div>
                    </div>
                    <div class="form-actions">
                      <div class="row">
                        <div class="col-md-offset-3 col-md-9">
                          <%= link_to '返回', admin_users_path, :class => 'btn btn-default' %>
                          <button type="submit" class="btn green">更新</button>
                        </div>
                      </div>
                    </div>
                  <% end %>
                  </div>
                <!-- End: life time stats -->
              </div>
            </div>
        </div>
        <!-- END PAGE CONTENT INNER -->
    </div>
</div>
<!-- END PAGE CONTENT -->