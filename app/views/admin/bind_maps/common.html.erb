<%#= content_tag 'p', nil, :id => 'gw-accounts', :'data-gw-accounts' => @gw_accounts %>
<!-- BEGIN PAGE HEAD -->
<div class="page-head">
  <div class="container">
    <!-- BEGIN PAGE TITLE -->
    <div class="page-title">
      <h1>地址绑定查询
        <small>BTC OMNI ETH</small>
      </h1>
    </div>
    <!-- END PAGE TITLE -->
  </div>
</div>
<!-- END PAGE HEAD -->
<!-- BEGIN PAGE CONTENT -->
<div class="page-content">
  <div id="his-container" class="container">
    <!-- BEGIN PAGE CONTENT INNER -->
    <div class="row">
      <div class="col-md-12">
        <!-- Begin: life time stats -->
        <div class="portlet light">
          <div class="portlet-title">
            <div class="caption">
              <i class="fa fa-gift font-green-sharp"></i>
              <span class="caption-subject font-green-sharp bold">查询绑定记录</span>
            </div>
            <div class="actions">
              <button id="btn-expand" class="btn btn-default btn-sm">
                <i class="fa fa-expand" title="全屏"></i>
              </button>
              <button id="btn-compress" class="btn btn-default btn-sm" style="display: none;">
                <i class="fa fa-compress" title="取消全屏"></i>
              </button>
            </div>
          </div>
          <div class="portlet-body">
            <div class="table-container">
              <div id="toolbar"></div>
              <table
                id="tbl-bind_maps"
                data-classes="table table-striped table-bordered table-hover"
                data-url="<%= more_common_bind_maps_admin_bind_maps_path %>"
                data-toolbar="#toolbar"
                data-search="true"
                data-pagination="true"
                data-data-field="data"
                data-page-size="25"
                data-page-list="[25, 50, 100]"
              >

              </table>
            </div>
          </div>
        </div>
        <!-- End: life time stats -->
      </div>
    </div>
    <!-- END PAGE CONTENT INNER -->
  </div>
</div>
<!-- END PAGE CONTENT -->
